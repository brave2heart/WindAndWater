<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px37dp"
            android:drawablePadding="@dimen/px19dp"
            android:drawableTop="@drawable/sqds_sh_1"
            android:text="提交完成"
            android:textColor="@color/middle_gray_text" />

        <View
            android:layout_width="@dimen/px146dp"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:background="#ff6a14" />

        <TextView
            android:id="@+id/tv_master_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px37dp"
            android:drawablePadding="@dimen/px19dp"
            android:textColor="@color/middle_gray_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_apply_master_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px37dp"
        android:visibility="invisible"
        android:drawablePadding="@dimen/px19dp"
        android:text="审核信息"
        android:textColor="@color/tint_gray_text" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_again_master"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_marginRight="@dimen/px24dp"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/px178dp"
        android:text="确认登录"
        app:bootstrapBrand="success"
        app:roundedCorners="true" />
</LinearLayout>