<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/px18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_bazi_mingyun_icon"
                android:layout_marginTop="@dimen/px14dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:text="食神"
                android:textSize="@dimen/px24dp"
                android:background="@drawable/ctmx_bzmy_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_bazi_mingyun_title"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/px32dp"
                android:layout_marginTop="@dimen/px20dp"
                android:text="年柱"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/item_bazi_mingyun_content"
                android:layout_below="@id/item_bazi_mingyun_title"
                android:textSize="@dimen/px28dp"
                android:textColor="#666"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.5"
                android:text="食神为喜现于年"
                android:layout_marginBottom="@dimen/px40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>