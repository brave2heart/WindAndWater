<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_thin"
    android:orientation="vertical"
    android:descendantFocusability="afterDescendants"
    >
    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px200dp"
        android:background="@drawable/xxpd_banner"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_marginRight="@dimen/px24dp"
        android:layout_marginTop="@dimen/px30dp"
        android:padding="@dimen/px30dp"
        android:text="@string/test_blood_type"
        android:textColor="@color/grey1"
        android:layout_below="@id/iv_banner"/>
    <LinearLayout
        android:id="@+id/ll_choose_blood_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/desc"
        android:layout_marginTop="@dimen/px60dp">
        <TextView
            android:id="@+id/boy_bloodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男方血型："
            android:textColor="@color/colorAccent"
            android:layout_below="@id/desc"

           />
        <TextView
            android:id="@+id/tv_boy_bloodtype"
            android:layout_width="@dimen/px90dp"
            android:layout_height="wrap_content"
            android:text="请选择 "
            android:textColor="@color/grey1"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:id="@+id/girl_bloodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女方血型："
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/px60dp"
            />
        <TextView
            android:id="@+id/tv_girl_bloodtype"
            android:layout_width="@dimen/px90dp"
            android:layout_height="wrap_content"
            android:text="请选择 "
            android:gravity="center"
            android:textColor="@color/grey1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cesuan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:text="@string/start_cesuan"
        android:textSize="@dimen/textSize_l"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/px40dp"
        android:background="@drawable/selector_btn_touch"
        android:layout_below="@+id/ll_choose_blood_type"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/px80dp"
        android:layout_marginRight="@dimen/px80dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/statement"
        android:textColor="@color/tint_gray_text"
        android:textSize="@dimen/textSize_s"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/px30dp"
        />



</RelativeLayout>