<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_zodiac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px30dp">
        <ImageView
            android:id="@+id/iv_boy_zodiac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hyal_sxpd_sx_1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px60dp"
            android:layout_marginRight="@dimen/px60dp"
            android:src="@drawable/hyal_sxpd_sx_xin"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/iv_girl_zodiac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hyal_sxpd_sx_7"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px30dp"
        android:textSize="@dimen/textSize_l"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/ll_zodiac"/>
    <TextView
        android:id="@+id/tv_animal_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/middle_gray_text"
        android:layout_below="@id/tv_animal"
        android:layout_marginTop="@dimen/px30dp"
        android:layout_marginLeft="@dimen/px30dp"
        android:layout_marginRight="@dimen/px30dp"
        />
</RelativeLayout>