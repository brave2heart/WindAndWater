<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dip"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/i_avatar"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_marginRight="10dip" />

    <TextView
        android:id="@+id/t_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/i_avatar"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/t_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_nickname"
        android:layout_marginTop="0.5dip"
        android:layout_toRightOf="@+id/i_avatar"
        android:textColor="#777"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/t_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i_avatar"
        android:layout_marginTop="10dip"
        android:textColor="#000"
        android:textSize="15sp" />

    <com.living.view.MessagePicturesLayout
        android:id="@+id/l_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_content"
        android:layout_marginTop="10dip" />

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dip"-->
    <!--android:layout_below="@+id/l_pictures"-->
    <!--android:layout_marginLeft="3dip"-->
    <!--android:layout_marginRight="3dip"-->
    <!--android:layout_marginTop="10dip"-->
    <!--android:background="#E1E1E1"/>-->

    <RelativeLayout
        android:layout_below="@+id/l_pictures"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56分钟前点赞" />

        <TextView
            android:id="@+id/gongxiu_dianzan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="325" />

        <ImageView
            android:id="@+id/gongxiu_dianzan_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@id/gongxiu_dianzan_num"
            android:src="@mipmap/gongxiu_dianzan_icon" />

        <TextView
            android:id="@+id/gongxiu_pl_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_toLeftOf="@id/gongxiu_dianzan_icon"
            android:text="87" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
         android:layout_marginTop="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@id/gongxiu_pl_num"
            android:src="@mipmap/gongxiu_pl_icon" />

    </RelativeLayout>

</RelativeLayout>