<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_welcome_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#333333"
            android:textSize="28sp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_welcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_welcome_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_lanuch_btn2"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="立即体验"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:visibility="invisible" />

            <com.tongcheng.soothsay.widget.MyRadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="100dp"
                android:layout_height="7dp" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_launch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/margin_larger"
        app:bootstrapBrand="secondary"
        app:bootstrapSize="sm"
        app:bootstrapText="跳过"
        app:roundedCorners="true"
        app:showOutline="true" />
</RelativeLayout>
