<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_classroom_quan2"
    style="@style/item_click_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gongxou_iv_head_iamge"
        android:layout_width="@dimen/px100dp"
        android:layout_height="@dimen/px100dp"
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_marginTop="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@drawable/xuetang_gongxiu_shan" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/gongxou_iv_head_iamge"
        android:background="@drawable/xuetang_qifu_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/gongxiu_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="@dimen/dp_12"
                android:text="生活感悟"
                android:textSize="@dimen/px32sp" />

            <TextView
                android:id="@+id/gongxiu_labeltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_toRightOf="@+id/gongxiu_tv_title"
                android:background="@drawable/shape_mingli_dashi_tv_bg"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2"
                android:text="人气"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8" />

            <ImageView
                android:id="@+id/gongxiu_yuandian1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@+id/gongxiu_tv_title"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/shape_xiaoyuandian" />

            <TextView
                android:id="@+id/gongxiu_zhuantie1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gongxiu_tv_title"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_toRightOf="@+id/gongxiu_yuandian1"
                android:lines="1"
                android:text="转贴：借什么也别借钱转贴：借什么也别借钱转贴：借什么也别借钱转贴：借什么也别借钱转贴：借什么也别借钱"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/gongxiu_yuandian2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@+id/gongxiu_yuandian1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/shape_xiaoyuandian" />

            <TextView
                android:id="@+id/gongxiu_zhuantie2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gongxiu_zhuantie1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/gongxiu_yuandian2"
                android:ellipsize="end"
                android:lines="1"
                android:text="不评价别人的生话，是一个人最基本的素养，转贴：借什么也别借钱转贴：借什么也别借钱转贴：借什么也别借钱转贴：借什么也别借钱转贴：借什么也别借钱"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/gongxiu_huati_image"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_below="@id/gongxiu_yuandian2"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="@dimen/dp_18"
                android:src="@mipmap/pinglun" />

            <TextView
                android:id="@+id/gongxiu_huati_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gongxiu_zhuantie2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/px15dp"
                android:layout_toRightOf="@+id/gongxiu_huati_image"
                android:text="话题"
                android:textColor="@color/middle_gray_text"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/gongxiu_pl_image"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_below="@id/gongxiu_yuandian2"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_toRightOf="@+id/gongxiu_huati_num"
                android:src="@mipmap/canyu" />

            <TextView
                android:id="@+id/gongxiu_pl_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gongxiu_zhuantie2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/px15dp"
                android:layout_toRightOf="@+id/gongxiu_pl_image"
                android:text="1764人参与"
                android:textColor="@color/middle_gray_text"
                android:textSize="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/gongxiu_right_iamge"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_40"
                android:scaleType="fitXY"
                android:src="@drawable/xuetang_gongxiu_image2" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>


