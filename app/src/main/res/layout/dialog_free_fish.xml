<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_free_dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/margin_small">

    <RelativeLayout
        android:id="@+id/img_free_diloag_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fsc_sc_bg" />

        <ImageView
            android:id="@+id/img_free_diloag_fish"
            android:layout_width="@dimen/px110dp"
            android:layout_height="@dimen/px110dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

    </RelativeLayout>


    <TextView
        android:id="@+id/img_free_diloag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/img_free_diloag_bg"
        android:layout_below="@id/img_free_diloag_bg"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_s" />

    <TextView
        android:id="@+id/img_free_diloag_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/img_free_diloag_bg"
        android:layout_below="@id/img_free_diloag_name"
        android:layout_marginTop="@dimen/margin_tiny"
        android:textSize="@dimen/textSize_s" />

    <TextView
        android:id="@+id/img_free_diloag_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/img_free_diloag_bg"
        android:layout_alignRight="@id/img_free_diloag_bg"
        android:layout_below="@id/img_free_diloag_date"
        android:layout_marginTop="@dimen/margin_tiny"
        android:textColor="@color/tint_gray_text"
        android:textSize="@dimen/textSize_s" />


    <ImageView
        android:id="@+id/img_free_diloag_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_free_diloag_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"

        android:src="@drawable/fsc_tc_guanbi" />

</RelativeLayout>