<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"

    android:orientation="vertical">

    <!--    android:id="@+id/rl_mroe_master" -->

    <RelativeLayout
        android:id="@+id/rl_mroe_master"
        style="@style/item_click_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_small"
        android:paddingTop="@dimen/margin_small">


        <!-- android:src="@drawable/icon_sanjiao" 棕色三角图标-->
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:src="@drawable/shape_red_rectangles" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_toRightOf="@+id/iv_right"
            android:text="@string/txt_recommend"
            android:textColor="#292838"
            android:textSize="@dimen/textSize_l" />

        <TextView
            android:id="@+id/tv_mroe_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_middle"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/icon_toright"
            android:text="@string/txt_more"
            android:textColor="@color/grey1"
            android:textSize="@dimen/textSize_m" />

    </RelativeLayout>

    <View style="@style/horizontalDivider" />

    <LinearLayout

        android:id="@+id/gotoMaster"
        style="@style/item_click_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/mingli_dashi_lifazhang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical">
                <!--易圣大师-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="李法章大师"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_l" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_mingli_dashi_tv_bg"
                        android:text="周易"
                        android:textColor="@color/red_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_mingli_dashi_tv_bg"
                        android:text="国学"
                        android:textColor="@color/red_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_mingli_dashi_tv_bg"
                        android:text="专业"
                        android:textColor="@color/red_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_mingli_dashi_tv_bg"
                        android:text="好评推荐"
                        android:textColor="@color/red_light" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="掌握一年中每月运势好坏预测，助你在婚恋、工作、事业中及时调整方向大展身手，如鱼得水"
                    android:textColor="@color/grey1"
                    android:textSize="@dimen/textSize_m" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="掌握一年中每月运势好坏预测，助你在婚恋、工作、事业中及时调整方向大展身手，如鱼得水"
                    android:textColor="@color/grey1"
                    android:textSize="@dimen/textSize_m" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/tv_my_yunshi"
                    android:background="@color/divide_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5">


                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@drawable/mingli_dashio_jieda" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="1428" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"

                        android:src="@drawable/mingli_dashio_pingjia" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"

                        android:text="592" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"

                        android:src="@drawable/mingli_dashio_canyu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="1764" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

