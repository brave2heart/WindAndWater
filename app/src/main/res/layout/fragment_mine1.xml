<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.living.view.PullToZoomScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <include layout="@layout/person_center_halftop" />

            <include layout="@layout/person_center_halfdown" />
        </LinearLayout>

    </com.living.view.PullToZoomScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/rl_mine_head"
            style="@style/item_click_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_me_head_bg"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="fitXY"
                android:src="@drawable/me_bg" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_me_head_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="设置"
                    android:textColor="@color/mine_txt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_me_head_card"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_30"
                    android:src="@drawable/me_shop_card"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_me_head_message"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:src="@drawable/me_head_message"
                    android:visibility="gone" />

                <com.tongcheng.soothsay.widget.RoundImageView
                    android:id="@+id/iv_mine_photo"
                    android:layout_width="@dimen/px90dp"
                    android:layout_height="@dimen/px90dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_head_icon" />

                <TextView
                    android:id="@+id/tv_mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_mine_photo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="梅长苏"
                    android:textColor="@color/mine_txt"
                    android:textSize="@dimen/sp_15" />

                <LinearLayout
                    android:id="@+id/ll_me_head_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_me_lucency_rectangle"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/me_head_shop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="开运商城"
                        android:textColor="@color/mine_txt" />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"

                        android:src="@drawable/me_head_right" />

                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_mine_sqds"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:layout_marginTop="@dimen/px20dp"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_mine_sqds"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px34dp"
                    android:src="@drawable/me_shengqing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/iv_mine_sqds"
                    android:text="@string/txt_shenqing_dashi"
                    android:textColor="@color/mine_txt"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_middle"
                    android:src="@drawable/icon_toright" />
            </RelativeLayout>

            <View style="@style/horizontalDivider" />

            <RelativeLayout
                android:id="@+id/rl_mine_dingdan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:layout_marginTop="@dimen/px20dp"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_mine_dingdan"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px34dp"
                    android:src="@drawable/me_dingdan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/iv_mine_dingdan"
                    android:text="@string/txt_mine_dingdan"
                    android:textColor="@color/mine_txt"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_middle"
                    android:src="@drawable/icon_toright" />
            </RelativeLayout>

            <View style="@style/horizontalDivider" />

            <RelativeLayout
                android:id="@+id/rl_mine_jifen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_mine_jifen"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px34dp"
                    android:src="@drawable/me_jifen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/iv_mine_jifen"
                    android:text="@string/txt_mine_jifen"
                    android:textColor="@color/mine_txt"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_middle"
                    android:src="@drawable/icon_toright" />
            </RelativeLayout>

            <View style="@style/horizontalDivider" />

            <RelativeLayout
                android:id="@+id/rl_mine_xiaoxi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_mine_xiaoxi"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px34dp"
                    android:src="@drawable/me_head_message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/iv_mine_xiaoxi"
                    android:text="@string/txt_mine_xiaoxi"
                    android:textColor="@color/mine_txt"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_middle"
                    android:src="@drawable/icon_toright" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mine_kaiyun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:layout_marginTop="@dimen/px20dp"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_mine_kaiyun"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px34dp"
                    android:src="@drawable/me_head_shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/iv_mine_kaiyun"
                    android:text="@string/txt_mine_kaiyun"
                    android:textColor="@color/mine_txt"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_middle"
                    android:src="@drawable/icon_toright" />
            </RelativeLayout>

            <View style="@style/horizontalDivider" />

            <RelativeLayout
                android:id="@+id/rl_mine_cart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_mine_cart"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px34dp"
                    android:src="@drawable/me_shop_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/iv_mine_cart"
                    android:text="@string/txt_mine_cart"
                    android:textColor="@color/mine_txt"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_middle"
                    android:src="@drawable/icon_toright" />
            </RelativeLayout>

            <View style="@style/horizontalDivider" />

            <RelativeLayout
                android:id="@+id/rl_mine_kefu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_mine_kefu"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px34dp"
                    android:src="@drawable/me_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/iv_mine_kefu"
                    android:text="@string/txt_mine_kefu"
                    android:textColor="@color/mine_txt"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_middle"
                    android:src="@drawable/icon_toright" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mine_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:layout_marginBottom="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_mine_setting"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px34dp"
                    android:src="@drawable/me_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/iv_mine_setting"
                    android:text="@string/txt_mine_setting"
                    android:textColor="@color/mine_txt"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_middle"
                    android:src="@drawable/icon_toright" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>