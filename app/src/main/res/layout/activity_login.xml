<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.tongcheng.soothsay.widget.RoundImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginTop="@dimen/px20dp"
        android:background="@color/item_divider" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_register_phone"
        android:drawablePadding="20dp"
        android:hint="手机号码"
        android:inputType="phone"
        android:maxLength="13"
        android:padding="3dp"
        android:textCursorDrawable="@drawable/selector_edittext_cursor"
        android:textSize="14sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/item_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/transparent"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:drawableLeft="@drawable/ic_register_password"
            android:drawablePadding="20dp"
            android:hint="密码(6-20位数字或字母)"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="3dp"
            android:textCursorDrawable="@drawable/selector_edittext_cursor"
            android:textSize="14sp" />


        <ImageButton
            android:id="@+id/ibtn_can_read_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/selector_btn_can_read_psd" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/item_divider" />

    <TextView
        android:id="@+id/tv_longin_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin_tiny"
        android:autoLink="all"
        android:padding="@dimen/dp_5"
        android:text="忘记密码？"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_middle"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_login_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:text="马上注册"
            app:bootstrapBrand="warning"
            app:roundedCorners="false" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_login_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="确认登录"
            app:bootstrapBrand="success"
            app:roundedCorners="false" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:background="@color/item_divider" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/px24dp"
            android:textColor="@color/color_text_999"
            android:text="其他账号登录" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:background="@color/item_divider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login_qq"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:src="@drawable/login_qq" />

        <ImageView
            android:id="@+id/iv_login_weixin"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/login_weixin" />

        <!--<ImageView-->
            <!--android:id="@+id/iv_login_weibo"-->
            <!--android:layout_width="@dimen/dp_0"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="@dimen/dp_15"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/login_weibo" />-->
    </LinearLayout>

</LinearLayout>