<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_circletlist_facepic"
            android:layout_width="@dimen/px100dp"
            android:layout_height="@dimen/px100dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/px30dp"
            android:layout_marginLeft="@dimen/px24dp"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_marginTop="@dimen/px30dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_item_circletlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_item_circletlist_facepic"
            android:layout_toRightOf="@+id/iv_item_circletlist_facepic"
            android:text="testteset"
            android:textColor="@color/color_text_333"
            android:textSize="@dimen/px28dp"
            />

        <TextView
            android:id="@+id/tv_item_circlelist_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_circletlist_facepic"
            android:layout_toEndOf="@+id/iv_item_circletlist_facepic"
            android:layout_toRightOf="@+id/iv_item_circletlist_facepic"
            android:text="话题：24"
            android:textColor="@color/color_text_999"
            android:textSize="@dimen/px24sp"/>

     <View
         android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:layout_toRightOf="@id/iv_item_circletlist_facepic"
         android:background="@color/gray"/>
    </RelativeLayout>
</LinearLayout>