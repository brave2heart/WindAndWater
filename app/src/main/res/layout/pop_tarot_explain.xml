<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_larger"
    android:layout_marginRight="@dimen/margin_larger"
    android:layout_marginTop="@dimen/margin_larger"
    android:layout_centerInParent="true"
    android:layout_marginBottom="@dimen/margin_larger"
    android:padding="@dimen/margin_middle"
    android:background="@drawable/shape_tarot_pop_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_tarot_pop"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginRight="@dimen/margin_medium"
        android:src="@drawable/xztl_tlzb_3"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/tv_tarot_pop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_tarot_pop"
        android:text="牌名： 世界"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_tarot_pop_paiwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_tarot_pop"
        android:layout_below="@id/tv_tarot_pop_name"
        android:layout_marginTop="@dimen/margin_small"
        android:text="牌位： 世界"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/tv_tarot_pop_paiyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_tarot_pop"
        android:layout_below="@id/tv_tarot_pop_paiwei"
        android:layout_marginTop="@dimen/margin_small"
        android:text="牌义： 世界"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_tarot_pop_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_below="@id/img_tarot_pop"
        android:text="解语： 世界"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_tarot_intro"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px70dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_below="@id/tv_tarot_pop_des"
        android:paddingRight="@dimen/margin_large"
        android:paddingLeft="@dimen/margin_large"
        android:background="@drawable/shape_tarot_btn"
        android:foreground="?android:selectableItemBackground"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/brown"/>


</RelativeLayout>