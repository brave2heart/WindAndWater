<?xml version="1.0" encoding="utf-8"?>
<com.tongcheng.soothsay.widget.CustScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/dp_10">


                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="￥19.9"
                    android:textColor="@color/yellow_text"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/goods_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/goods_price"
                    android:src="@mipmap/ic_launcher" />

            </RelativeLayout>

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Haut Ton/皓顿长款钱包真皮薄款简约女手拿钱夹多卡位情侣钱包男"
                android:textColor="@color/black_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/goods_brief"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="3dp"
                android:textColor="#838383"
                android:textSize="12sp"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_carry_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="快递：免运费"
                    android:textColor="@color/middle_gray_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sales_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="已售7934件"
                    android:textColor="@color/middle_gray_text"
                    android:textSize="12sp" />
            </RelativeLayout>

            <include layout="@layout/model_item_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:background="@color/yellow_color"
                android:text="内容待定区域" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/item_divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/page_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="继续拖动，查看图文详情"
                    android:textColor="@color/color_text_999"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.tongcheng.soothsay.widget.CustScrollView>