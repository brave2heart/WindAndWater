<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/iv_table">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/dp_45"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/gp_149"
            />

        <include
            android:id="@+id/item_god_3"
            layout="@layout/fragment_praying_station_godlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />

        <include
            android:id="@+id/item_god_1"
            layout="@layout/fragment_praying_station_godlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/iv_guangquan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_god2"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv_shentai"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_shentai_1"/>

        <ImageView
            android:id="@+id/iv_god2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dp_45"
            android:src="@drawable/god_1"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_table"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:scaleX="1.2"
        android:scaleY="1.0"
        android:src="@drawable/gp_143"/>

    <ImageView
        android:id="@+id/iv_left_vase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_180"
        android:layout_marginLeft="@dimen/dp_60"
        android:src="@drawable/icon_qifutai_vase"/>

    <ImageView
        android:id="@+id/iv_xiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_180"
        android:src="@drawable/icon_qifutai_xiang_empty"/>

    <ImageView
        android:id="@+id/iv_right_vase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_180"
        android:layout_marginRight="@dimen/dp_60"
        android:src="@drawable/icon_qifutai_vase"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_right_vase"
        android:layout_alignEnd="@+id/iv_right_vase"
        android:layout_alignRight="@+id/iv_right_vase"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_right_lamp_huo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qifutai_fire"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_right_lamp"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_na1"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_left_vase"
        android:layout_alignLeft="@+id/iv_left_vase"
        android:layout_alignStart="@+id/iv_left_vase"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_left_lamp_huo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qifutai_fire"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_left_lamp"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_na1"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="138dp">


        <ImageView
            android:id="@+id/iv_plate"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_80"
            android:layout_alignTop="@+id/iv_watercup"

            android:layout_toLeftOf="@+id/iv_xiang"
            android:layout_toStartOf="@+id/iv_xiang"
            android:src="@drawable/icon_qifutai_plate"/>


        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginBottom="140dp"-->
        <!--android:layout_toLeftOf="@+id/iv_watercup"-->

        <LinearLayout
            android:id="@+id/ll_deng_pareng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_deng_huo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/qifutai_fire"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/iv_deng"
                android:layout_width="65dp"
                android:layout_height="62dp"
                android:src="@drawable/icon_qifutai_deng"/>
        </LinearLayout>

        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginBottom="132dp"-->
        <!--android:layout_toLeftOf="@+id/iv_belt"-->
        <ImageView
            android:layout_marginBottom="-10dp"
            android:id="@+id/iv_watercup"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/icon_qifutai_watercup1"/>


        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginBottom="125dp"-->
        <!--android:layout_marginRight="@dimen/dp_32"-->

        <ImageView
            android:id="@+id/iv_belt"
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:src="@drawable/qifu_wish_belt_lighting"/>
    </LinearLayout>

</RelativeLayout>