<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_middle"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_goods"
        android:layout_marginLeft="@dimen/margin_middle"
        android:text="护身符"
        android:textSize="@dimen/textSize_m"
        android:textColor="@color/tint_gray_text"/>

    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_name"
        android:layout_alignLeft="@id/tv_goods_name"
        android:maxLines="2"
        android:text="测试标题测试标题测试标题测试标题测试标题"
        android:textColor="@color/tint_gray_text"
        android:textSize="@dimen/textSize_m"/>

    <TextView
        android:id="@+id/tv_goods_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_goods"
        android:layout_alignLeft="@id/tv_goods_title"
        android:text="¥"
        android:textSize="@dimen/textSize_s"
        android:textColor="@color/goods_confirm_green"/>

    <TextView
        android:id="@+id/tv_goods_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_goods_icon"
        android:layout_alignBaseline="@id/tv_goods_icon"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:text="24.00"
        android:textSize="@dimen/textSize_xl"
        android:textColor="@color/goods_confirm_green"/>

    <TextView
        android:id="@+id/tv_goods_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_goods_icon"
        android:layout_alignParentRight="true"
        android:text="x2"
        android:textColor="@color/tint_gray_text"/>

</RelativeLayout>