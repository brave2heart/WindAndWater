<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/px20dp"
    android:layout_marginRight="@dimen/px20dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1dp"
        android:layout_alignTop="@+id/ll_add_address" />

    <RelativeLayout
        android:id="@+id/ll_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/address_botton_bg"
        android:foreground="?android:selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_added"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:drawablePadding="@dimen/px10dp"
            android:gravity="center_vertical"
            android:text="新建地址"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_m" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_address_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_add_address"/>

</RelativeLayout>