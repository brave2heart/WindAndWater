<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_white"
              android:orientation="vertical"
              android:padding="10dp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_xuyuan_belt"/>

    <TextView

        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:text="@string/qifu_wish_text21"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/px20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/px20dp"
            android:clickable="true"
            android:text="重新许愿"
            android:textColor="@color/add_note_note"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tv_submit"
            android:layout_toStartOf="@+id/tv_submit"
            android:clickable="true"
            android:text="我再想想"/>
    </RelativeLayout>
</LinearLayout>