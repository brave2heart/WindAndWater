<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_more"
        android:layout_toRightOf="@+id/iv_back"
        android:background="@drawable/icon_zhulian_new"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_master"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/icon_btn_new"
            android:lines="1"
            android:textSize="@dimen/px26dp"
            android:text="@string/txt_master"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_course"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/icon_btn_new"
            android:lines="1"
            android:text="@string/txt_course"
            android:textSize="@dimen/px26dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_shopping_mall"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/icon_btn_new"
            android:lines="1"
            android:text="@string/txt_shopping_mall"
            android:textSize="@dimen/px26dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_more"
        android:clickable="true"/>
</RelativeLayout>