<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_150">


            <ImageView
                android:id="@+id/shop_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/xuetang_kecheng_kanxiang" />
            <!--<com.tongcheng.soothsay.widget.BigRoundImageView-->
            <!--android:id="@+id/shop_item_image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="fill_vertical"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@mipmap/ic_launcher"-->
            <!--app:imgborderRadius="4dp"-->
            <!--app:imgtype="round" />-->


            <TextView
                android:layout_width="14dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/shape_shop_hot_bg"
                android:padding="3dp"
                android:text="爆\n款"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_8" />

        </RelativeLayout>

        <TextView
            android:id="@+id/shop_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20dp"
            android:lineSpacingExtra="@dimen/dp_5"
            android:lineSpacingMultiplier="1.2"
            android:lines="2"
            android:text="2017风生水开光和田玉属牛本命佛"
            android:textColor="@color/black_text"
            android:textSize="@dimen/px28sp" />

        <TextView
            android:id="@+id/shop_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px10dp"
            android:layout_marginTop="@dimen/px10dp"
            android:lines="1"
            android:text="祈福转运，祈福转运，祈福转运"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/px24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shop_item_newprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 199"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/shop_item_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="¥ 399"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>