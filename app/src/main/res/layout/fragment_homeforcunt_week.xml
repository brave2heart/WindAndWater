<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--星座头部-->
    <include
        layout="@layout/homeforcunt_constellation_head"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/homeforcunt_week_xiaoyuandian_red"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_27"
                android:src="@drawable/shape_xiaoyuandian_zonghe" />

            <TextView
                android:id="@+id/homeforcunt_week_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_toRightOf="@+id/homeforcunt_week_xiaoyuandian_red"
                android:text="健康运势"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/homeforcunt_week_health_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_week_health"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.5"
                android:text="注意下皮肤过敏，以及肠胃毛病。"
                android:textColor="@color/black_light"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:id="@+id/homeforcunt_week_xiaoyuandian_blue"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_below="@+id/homeforcunt_week_health_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_37"
                android:src="@drawable/shape_xiaoyuandian_blue" />

            <TextView
                android:id="@+id/homeforcunt_week_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_week_health_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@+id/homeforcunt_week_xiaoyuandian_blue"
                android:text="事业运势"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/homeforcunt_week_work_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_week_work"

                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.5"
                android:text="本周工作运不错，在工作过程中也是有很多机会，整体来看是不断稳定发展的。"
                android:textColor="@color/black_light"
                android:textSize="@dimen/dp_15" />

            <ImageView

                android:id="@+id/homeforcunt_week_xiaoyuandian_yellow"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_below="@+id/homeforcunt_week_work_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_37"
                android:src="@drawable/shape_xiaoyuandian_yellow" />

            <TextView
                android:id="@+id/homeforcunt_week_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_week_work_content"

                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@+id/homeforcunt_week_xiaoyuandian_yellow"
                android:text="财富运势"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/homeforcunt_week_money_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_week_money"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.5"
                android:text="财运是不错的，导致狮子们在用钱方面非常大手大脚，这个要注意下。"
                android:textColor="@color/black_light"
                android:textSize="@dimen/dp_15" />


            <ImageView

                android:id="@+id/homeforcunt_week_xiaoyuandian_love"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_below="@+id/homeforcunt_week_money_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_37"
                android:src="@drawable/shape_xiaoyuandian_red" />

            <TextView
                android:id="@+id/homeforcunt_week_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_week_money_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@+id/homeforcunt_week_xiaoyuandian_love"
                android:text="爱情运势"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/homeforcunt_week_love_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_week_love"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:lineSpacingMultiplier="1.5"
                android:text="有伴的狮子座总是会因为一些小事而和伴侣吵架，单身的狮子可能还是维持原来的高标准而高傲得单身着。"
                android:textColor="@color/black_light"
                android:textSize="@dimen/dp_15" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--大家都在看-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small">

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/shape_red_rectangles" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle"
                    android:layout_toRightOf="@+id/iv_right"
                    android:text="大家都在玩"
                    android:textColor="#292838"
                    android:textSize="@dimen/textSize_l" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="点击查看" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@drawable/tv_right" />

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mingli_xingzuo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="星座塔罗" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mingli_qifu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="祈福转运" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mingli_bazi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="八字测算" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mingli_qiuqian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="求签问事" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>


