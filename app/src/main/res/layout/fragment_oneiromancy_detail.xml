<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:background="#f9f5ef"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:clickable="true"
            android:id="@+id/iv_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/nav_ic__back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_title1"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="title"
            android:textSize="@dimen/px34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/px30dp"
        android:layout_marginRight="@dimen/px24dp"
        android:layout_marginLeft="@dimen/px24dp"
        android:background="#faf5e7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/px70dp"
        >

        <LinearLayout
            android:background="@drawable/xuyuandeng_bg_biankuang"
            android:layout_margin="@dimen/px20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/tv_title2"
                android:layout_marginTop="@dimen/px40dp"
                android:gravity="center"
                android:text="Title"
                android:textSize="@dimen/px48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>