<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_1"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <RelativeLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/home_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="演技才会让人气演员发光"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18" />


        <LinearLayout
            android:id="@+id/home_toutiao_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_top_title"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="visible">

            <ImageView
                android:id="@+id/home_top_imageview1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/home_top_image_loading1" />

            <ImageView
                android:id="@+id/home_top_imageview2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/home_top_image_loading1" />

            <ImageView
                android:id="@+id/home_top_imageview3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/home_top_image_loading1" />

        </LinearLayout>

        <TextView
            android:id="@+id/home_toutiao_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_toutiao_ll"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="3个小时前"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/home_top_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_toutiao_ll"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/home_toutiao_time"
            android:text="新华网"
            android:textSize="@dimen/dp_10" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_toutiao_ll_one_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone">
        <ImageView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/home_news_right_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@mipmap/home_top_image_loading1" />

    </LinearLayout>
</LinearLayout>