<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:layout_marginTop="@dimen/px20dp"
        android:background="@drawable/selector_touch"
        android:foreground="?android:selectableItemBackground">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px30dp"
            android:text="本地推送"
            android:textColor="@color/mine_txt"
            android:textSize="@dimen/sp_15" />

        <Switch
            android:id="@+id/sw_setting_tuisong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:checked="true" />
    </RelativeLayout>

    <View style="@style/horizontalDivider" />

    <RelativeLayout
        android:id="@+id/rl_setting_our"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:background="@drawable/selector_touch"
        android:foreground="?android:selectableItemBackground">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px30dp"
            android:text="关于大师文化"
            android:textColor="@color/mine_txt"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <View style="@style/horizontalDivider" />

    <RelativeLayout
        android:id="@+id/rl_setting_join"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:background="@drawable/selector_touch"
        android:foreground="?android:selectableItemBackground">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px30dp"
            android:text="加入我们"
            android:textColor="@color/mine_txt"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <View style="@style/horizontalDivider" />

    <RelativeLayout
        android:id="@+id/rl_setting_opinion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:layout_marginTop="@dimen/px20dp"
        android:background="@drawable/selector_touch"
        android:foreground="?android:selectableItemBackground">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px30dp"
            android:text="意见反馈"
            android:textColor="@color/mine_txt"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <View style="@style/horizontalDivider" />

    <RelativeLayout
        android:id="@+id/rl_setting_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:background="@drawable/selector_touch"
        android:foreground="?android:selectableItemBackground">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px30dp"
            android:text="分享应用"
            android:textColor="@color/mine_txt"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <View style="@style/horizontalDivider" />

    <RelativeLayout
        android:id="@+id/rl_setting_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:background="@drawable/selector_touch"
        android:foreground="?android:selectableItemBackground">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px30dp"
            android:text="版本更新"
            android:textColor="@color/mine_txt"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_mine_info_bangding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px20dp"
        android:src="@drawable/icon_toright"
        android:text="版本：v.1.0"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px70dp"
        android:src="@drawable/icon_toright"
        android:text="Copyright @2016-2018"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px5dp"
        android:src="@drawable/icon_toright"
        android:text="广东风生水传统文化传媒研究有限公司"
        android:textSize="@dimen/sp_13" />
</LinearLayout>