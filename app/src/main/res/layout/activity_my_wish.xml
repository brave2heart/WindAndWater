<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_wish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color_danse_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_wish"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/lingji_yuncheng_qifutai_bg"
         />

        <TextView
            android:id="@+id/tv_wish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_wish_warnning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="@string/txt_wish"
        android:textColor="@color/middle_gray_text"
        android:textSize="@dimen/sp_12" />

    <EditText
        android:id="@+id/et_wish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_wish_warnning"
        android:layout_below="@id/ll_wish"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/transparent"
        android:gravity="top"
        android:hint="在这里写下您的愿望......"
        android:textColorHint="@color/middle_gray_text" />
</RelativeLayout>