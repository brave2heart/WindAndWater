                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/tv_item_circletlist_name"
                    android:src="@drawable/xuetang_gongxiu_renqi" />

                <ImageView
                    android:id="@+id/gongxiu_yuandian1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_below="@+id/tv_item_circletlist_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/shape_xiaoyuandian" />

                <TextView
