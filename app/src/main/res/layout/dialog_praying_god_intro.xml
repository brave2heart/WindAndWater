<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_orange_fcefd7"
              android:orientation="vertical"
              android:weightSum="1">

    <TextView
        android:id="@+id/tv_dialong_praying_god_intor_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30dp"
        android:padding="@dimen/bootstrap_alert_paddings"
        android:text="已连续祈福 %d 天"
        android:textAlignment="center"
        android:textColor="@color/color_text_d3995a"/>

    <ScrollView
        android:layout_width="@dimen/px500dp"
        android:layout_height="@dimen/px650dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_dialong_praying_god_intro_god"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/god_1"/>

            <TextView
                android:id="@+id/tv_dialong_praying_god_intro_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/px20dp"
                android:text="TextView"
                android:textSize="@dimen/px24dp"
                />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_dialong_praying_god_intro_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/px20dp"
        android:text="送仙回天"
        android:textAlignment="center"
        android:textColor="@color/color_text_d3995a"
        android:textSize="@dimen/px28dp"
        />

    <Button
        android:layout_marginTop="@dimen/px30dp"
        android:id="@+id/btn_dialong_praying_god_intro_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="关闭"
        android:paddingRight="@dimen/px10dp"
        android:paddingLeft="@dimen/px10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_l"
        android:layout_marginBottom="@dimen/px30dp"
        android:background="@drawable/selector_btn_touch"
        />
</LinearLayout>