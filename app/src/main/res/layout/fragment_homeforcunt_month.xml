<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--星座头部-->
    <include
        layout="@layout/homeforcunt_constellation_head"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/homeforcunt_month_xiaoyuandian_add"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_27"
                android:src="@drawable/shape_xiaoyuandian_zonghe" />

            <TextView
                android:id="@+id/homeforcunt_month_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_toRightOf="@+id/homeforcunt_month_xiaoyuandian_add"
                android:text="综合运势"
                android:textSize="@dimen/dp_15" />

            <TextView

                android:id="@+id/homeforcunt_month_all_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_month_all"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="@dimen/dp_5"
                android:lineSpacingMultiplier="1.5"
                android:text="一月份对于狮子座来说特别忙碌，赚钱机会也多，这个月大狮子们可以好好把握机会了。"
                android:textColor="@color/black_light"
                android:textSize="@dimen/dp_15" />


            <ImageView
                android:id="@+id/homeforcunt_month_xiaoyuandian_red"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_below="@+id/homeforcunt_month_all_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_37"
                android:src="@drawable/shape_xiaoyuandian_zise" />

            <TextView
                android:id="@+id/homeforcunt_month_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_month_all_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@+id/homeforcunt_month_xiaoyuandian_red"
                android:text="健康运势"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/homeforcunt_month_health_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_month_health"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.5"
                android:text="注意一下呼吸道。"
                android:textColor="@color/black_light"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:id="@+id/homeforcunt_month_xiaoyuandian_blue"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_below="@+id/homeforcunt_month_health_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_37"
                android:src="@drawable/shape_xiaoyuandian_blue" />

            <TextView
                android:id="@+id/homeforcunt_month_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_month_health_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@+id/homeforcunt_month_xiaoyuandian_blue"
                android:text="事业运势"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/homeforcunt_month_work_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_month_work"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.5"
                android:text="这个月工作环境会有急促感，节奏感强，同时合作的客户也会因为某些事找你，所以自己做好准备工作很重要。"
                android:textColor="@color/black_light"
                android:textSize="@dimen/dp_15" />

            <ImageView

                android:id="@+id/homeforcunt_month_xiaoyuandian_yellow"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_below="@+id/homeforcunt_month_work_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_37"
                android:src="@drawable/shape_xiaoyuandian_yellow" />

            <TextView
                android:id="@+id/homeforcunt_month_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_month_work_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@+id/homeforcunt_month_xiaoyuandian_yellow"
                android:text="财富运势"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/homeforcunt_month_money_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_month_money"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.5"
                android:text="这个月狮子座的偏财运还是不错的，很有可能会莫名其妙得到一笔财富。"
                android:textColor="@color/black_light"
                android:textSize="@dimen/dp_15" />


            <ImageView

                android:id="@+id/homeforcunt_month_xiaoyuandian_love"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_below="@+id/homeforcunt_month_money_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_37"
                android:src="@drawable/shape_xiaoyuandian_red" />

            <TextView
                android:id="@+id/homeforcunt_month_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_month_money_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@+id/homeforcunt_month_xiaoyuandian_love"
                android:text="爱情运势"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/homeforcunt_month_love_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeforcunt_month_love"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:lineSpacingMultiplier="1.5"
                android:text="身边会出现吸引你的异性，但是你不会太过主动，还是会保持一些距离，有待观察。"
                android:textColor="@color/black_light"
                android:textSize="@dimen/dp_15" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--大家都在看-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small">

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/shape_red_rectangles" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle"
                    android:layout_toRightOf="@+id/iv_right"
                    android:text="大家都在玩"
                    android:textColor="#292838"
                    android:textSize="@dimen/textSize_l" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="点击查看" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@drawable/tv_right" />

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mingli_xingzuo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="星座塔罗" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mingli_qifu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="祈福转运" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mingli_bazi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="八字测算" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mingli_qiuqian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="求签问事" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
