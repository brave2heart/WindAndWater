<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_middle"
    android:paddingRight="@dimen/margin_middle"
    tools:layout_width="wrap_content"
    tools:background="#000"
    android:gravity="center_horizontal">



    <ImageView
        android:id="@+id/img_future_icon"
        android:layout_width="@dimen/px60dp"
        android:layout_height="@dimen/px60dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/weather_no"/>

    <TextView
        android:id="@+id/tv_future_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px70dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_s"
        tools:text="多云"/>

    <TextView
        android:id="@+id/tv_future_fanwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_s"
        tools:text="22/27"/>

    <TextView
        android:id="@+id/tv_future_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_s"
        tools:text="周一"/>



</LinearLayout>