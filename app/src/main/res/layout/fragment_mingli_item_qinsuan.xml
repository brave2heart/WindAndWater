<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/gotoMaster"
            style="@style/item_click_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/qinsuan_image"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/xuetang_dashi_lifazhang" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/qinsuan_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="李法章"
                        android:textSize="@dimen/textSize_l" />
                    <!--易圣大师-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/qinsuan_zhouyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_mingli_dashi_tv_bg"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:text="周易"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_10" />

                        <TextView
                            android:id="@+id/qinsuan_gx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@drawable/shape_mingli_dashi_tv_bg"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:text="国学"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_10" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5">


                        <ImageView
                            android:id="@+id/qinsuan_jd"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignLeft="@+id/qinsuan_pl"
                            android:layout_alignStart="@+id/qinsuan_pl"
                            android:layout_alignTop="@+id/qinsuan_jd_num"
                            android:layout_marginTop="@dimen/dp_2"
                            android:src="@drawable/mingli_dashio_jieda" />

                        <TextView
                            android:id="@+id/qinsuan_jd_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_toRightOf="@+id/qinsuan_jd"
                            android:lines="1"
                            android:text="1428解答" />

                        <ImageView
                            android:id="@+id/qinsuan_pl"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@+id/qinsuan_jd"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@drawable/mingli_dashio_pingjia" />

                        <TextView
                            android:id="@+id/qinsuan_pl_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/qinsuan_jd_num"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_toRightOf="@+id/qinsuan_pl"
                            android:lines="1"
                            android:text="592" />

                        <ImageView
                            android:id="@+id/qinsuan_cy"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@+id/qinsuan_pl"
                            android:layout_marginTop="@dimen/dp_8"
                            android:src="@drawable/mingli_dashio_canyu" />

                        <TextView
                            android:id="@+id/qinsuan_cy_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/qinsuan_pl_num"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/qinsuan_cy"
                            android:lines="1"
                            android:text="1764" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>