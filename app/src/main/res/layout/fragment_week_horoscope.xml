<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/ll">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/divide_line"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/px20dp"
            >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px260dp"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/img_constellation_head"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24dp"
                        android:layout_marginRight="@dimen/px40dp"
                        android:src="@drawable/shape_base_headview_shadow"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/img_constellation_head"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_consname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_constellation_head"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/textSize_xl"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize_m"
                            android:textColor="@color/black"
                            android:text="11/25运势"
                            android:layout_marginTop="@dimen/margin_small"/>

                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_switch_constellation"
                        android:layout_width="@dimen/px176dp"
                        android:layout_height="@dimen/px82dp"
                        android:background="@drawable/xztl_xzyc_btn"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/px30dp"
                        android:focusable="true"
                        android:focusableInTouchMode="false"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/px20dp"
                    android:paddingLeft="@dimen/px30dp"
                    android:paddingRight="@dimen/px30dp"
                    android:paddingBottom="@dimen/px30dp"
                    android:background="@color/white"

                    >
                    <TextView
                        android:id="@+id/tv_healthy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="健康运势："
                        android:textSize="@dimen/textSize_m"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/px30dp"
                        />

                    <TextView
                        android:id="@+id/tv_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="求职运势："
                        android:textSize="@dimen/textSize_m"
                        android:textColor="@color/black"
                        android:layout_below="@id/tv_healthy"
                        android:layout_marginTop="@dimen/px60dp"/>

                    <TextView
                        android:id="@+id/tv_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="爱情运势："
                        android:textSize="@dimen/textSize_m"
                        android:textColor="@color/black"
                        android:layout_below="@id/tv_job"
                        android:layout_marginTop="@dimen/px60dp"
                        />
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="财运指数："
                        android:textSize="@dimen/textSize_m"
                        android:textColor="@color/black"
                        android:layout_below="@id/tv_love"
                        android:layout_marginTop="@dimen/px60dp"
                        />
                    <TextView
                        android:id="@+id/tv_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作运势："
                        android:textSize="@dimen/textSize_m"
                        android:textColor="@color/black"
                        android:layout_below="@id/tv_money"
                        android:layout_marginTop="@dimen/px60dp"/>
                </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>