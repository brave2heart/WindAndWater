<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:layout_margin="@dimen/px50dp"
              android:background="@drawable/shape_fbf7f0"
              android:padding="@dimen/px40dp">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10dp"
        android:text="供奉完成"
        android:textColor="@color/color_text_333"
        android:textSize="@dimen/textSize_xxl"/>

    <TextView
        android:id="@+id/tv_dialog_praying_god_finish_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20dp"
        android:lines="2"
        android:text="恭喜，你已累计祈拜地藏菩萨 %s天。坚持祈拜，原望将更容易实现。"
        android:textColor="@color/color_text_333"
        android:textSize="@dimen/textSize_l"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20dp"
        android:lines="3"
        android:text="请神必须连续供奉三天以上，如无法坚持要送仙回天，否则会视为对神明不敬，诚心祈求才能实现愿望。"
        android:textColor="@color/color_text_333"
        android:textSize="@dimen/textSize_l"/>

    <Button
        android:id="@+id/btn_dialog_praying_god_finish_next"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/px40dp"
        android:background="@drawable/selector_btn_touch"
        android:text="供奉下一位神明"
        android:paddingRight="@dimen/px30dp"
        android:paddingLeft="@dimen/px30dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_xl"/>
</LinearLayout>