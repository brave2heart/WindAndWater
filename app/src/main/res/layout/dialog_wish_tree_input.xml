<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_wish_tree_input_dialog_bg"
              android:orientation="vertical"
              android:weightSum="1">

    <LinearLayout
        android:layout_width="@dimen/px510dp"
        android:layout_height="@dimen/px600dp"
        android:layout_margin="@dimen/px20dp"
        android:background="@drawable/xuyuandeng_bg_biankuang"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="许愿:  "
                android:textColor="@color/color_text_333"
                android:textSize="@dimen/px34dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:hint="我的名字"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:textSize="@dimen/px28dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"/>
            </LinearLayout>

        </LinearLayout>


        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/px30dp"
            android:layout_weight="0.61"
            android:background="@drawable/shape_white_brown"
            android:ems="10"
            android:gravity="top"
            android:hint="许个愿吧！会得到大家的祝福哦！"
            android:padding="5dp"
            android:textColorHint="#999"
            android:textSize="@dimen/px28dp"
            />

        <Button
            android:textSize="@dimen/px32dp"
            android:textColor="@color/white"
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px20dp"
            android:layout_weight="0.05"
            android:background="@drawable/shape_brown"
            android:text="发布"/>
    </LinearLayout>

</LinearLayout>