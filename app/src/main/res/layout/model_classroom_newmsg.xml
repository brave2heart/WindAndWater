<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:orientation="horizontal">
    <!--星座-->
    <ImageView
        android:id="@+id/iv_classroom_bazi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/dsjt_banner_bzzs" />

    <TextView
        android:layout_width="@dimen/px_1"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_classroom_newmsg"
        android:background="@color/item_divider" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--风水-->
        <ImageView
            android:id="@+id/iv_classroom_fengshui"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/dsjt_banner_fs" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_below="@id/tv_classroom_newmsg"
            android:background="@color/item_divider" />
        <!--手相-->
        <ImageView
            android:id="@+id/iv_classroom_shouxian"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/dsjt_banner_shouxiang" />
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/px_1"
        android:layout_height="match_parent"
        android:background="@color/item_divider" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--生肖-->
        <ImageView
            android:id="@+id/iv_classroom_shengxiao"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/dsjt_banner_shengxiao" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_below="@id/tv_classroom_newmsg"
            android:background="@color/item_divider" />
        <!--星座-->
        <ImageView
            android:id="@+id/iv_classroom_star"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/dsjt_banner_xz" />
    </LinearLayout>

</LinearLayout>