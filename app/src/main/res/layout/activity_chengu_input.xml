<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_marginRight="@dimen/px24dp"
        android:layout_marginTop="@dimen/px30dp"
        android:background="@drawable/qimingcezi_bg"
        android:padding="@dimen/px30dp"
        android:text="@string/chengu_describ"
        android:textColor="@color/tint_gray_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginLeft="@dimen/px60dp"
        android:layout_marginRight="@dimen/px60dp"
        android:layout_marginTop="@dimen/px60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="出生日期：公历"
            android:textColor="@color/middle_gray_text" />


            <TextView
                android:id="@+id/tv_choose_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:background="@color/item_divider"
                android:layout_below="@id/tv_birthday"
                android:layout_marginTop="@dimen/px40dp"
                android:gravity="center"
                android:clickable="true"
                android:hint="请选择出生日期"
                android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_cesuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80dp"
            android:layout_below="@id/tv_choose_date"
            android:layout_marginTop="@dimen/px40dp"
            android:background="@drawable/selector_btn_touch"
            android:text="@string/start_cesuan"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="@dimen/px30dp"
            android:text="@string/statement"
            android:textColor="@color/tint_gray_text"
            android:textSize="@dimen/textSize_s" />

    </RelativeLayout>
</RelativeLayout>