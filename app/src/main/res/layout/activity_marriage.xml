<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/px30dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.tongcheng.soothsay.widget.RoundImageView
                android:id="@+id/img_boy"
                android:layout_width="@dimen/px200dp"
                android:layout_height="@dimen/px200dp"
                android:layout_gravity="center"
                android:src="@drawable/hyal_bmghh_nan"/>
            <Button
                android:id="@+id/btn_year_boy"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px80dp"
                android:text="请选择男方出生日期"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn_touch"
                android:layout_marginTop="@dimen/px60dp"
                android:layout_gravity="center"
                android:padding="@dimen/px10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.tongcheng.soothsay.widget.RoundImageView
                android:id="@+id/img_girl"
                android:layout_width="@dimen/px200dp"
                android:layout_height="@dimen/px200dp"
                android:layout_gravity="center"
                android:src="@drawable/hyal_bmghh_nv"/>
            <Button
                android:id="@+id/btn_year_girl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px80dp"
                android:text="请选择女方出生日期"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn_touch"
                android:layout_marginTop="@dimen/px60dp"
                android:padding="@dimen/px10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_cesuan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:textColor="@color/white"
        android:background="@drawable/selector_btn_touch"
        android:text="开始测算"
        android:textSize="@dimen/textSize_l"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/px10dp"
        android:layout_below="@+id/ll_layout"
        android:layout_marginTop="@dimen/px60dp"
        android:layout_marginLeft="@dimen/px80dp"
        android:layout_marginRight="@dimen/px80dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/statement"
        android:textColor="@color/tint_gray_text"
        android:textSize="@dimen/textSize_s"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/px30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/statement"
        android:textColor="@color/tint_gray_text"
        android:textSize="@dimen/textSize_s"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/px30dp"
        />

</RelativeLayout>