                    android:drawablePadding="20dp"
                    android:hint="请填写身份证上的姓名"
                    android:maxLength="13"
                    android:padding="3dp"
                    android:textCursorDrawable="@drawable/selector_edittext_cursor"
                    android:textSize="13sp" />
