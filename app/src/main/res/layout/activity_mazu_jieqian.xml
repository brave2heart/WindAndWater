<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/px20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#faf5e4"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px15dp"
            android:layout_weight="1"
            android:background="@drawable/qqws_mzxq_bg"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px30dp"
                android:gravity="center"
                android:text="妈祖灵签"
                android:textColor="@color/color_text_d3995a"
                android:textSize="@dimen/px60dp"/>

            <include layout="@layout/lineview_color_d3995a"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px30dp">

                    <TextView
                        android:id="@+id/tv_mazu_dijiqian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px20dp"
                        android:text="这是第几签"
                        android:textColor="@color/color_text_333"
                        android:textSize="@dimen/px34dp"/>

                    <TextView
                        android:id="@+id/tv_mazu_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拉拉"
                        android:textColor="@color/color_text_333"
                        android:textSize="@dimen/px34dp"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_mazu_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/px20dp"
                    android:text="素素素素素素素素素"
                    android:textColor="@color/color_text_d3995a"
                    android:textSize="@dimen/px28dp"

                    />


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_mazu_qianci_1"
                        style="@style/text_mazu_jieqian_style1"
                        android:text="素素素素素素素"/>

                    <TextView
                        android:id="@+id/tv_mazu_qianci_2"
                        style="@style/text_mazu_jieqian_style1"
                        android:text="素素素素素素素"/>

                    <TextView
                        android:id="@+id/tv_mazu_qianci_3"
                        style="@style/text_mazu_jieqian_style1"
                        android:text="素素素素素素素"/>

                    <TextView
                        android:id="@+id/tv_mazu_qianci_4"
                        style="@style/text_mazu_jieqian_style1"
                        android:text="素素素素素素素"/>

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px10dp"
                android:text="解签："
                android:textSize="@dimen/px32dp"/>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_mazu_jiexi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10dp"
                    android:lineSpacingExtra="@dimen/px20dp"
                    android:text="      如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果"
                    android:textColor="@color/color_text_666"
                    android:textSize="@dimen/px28dp"/>

            </ScrollView>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>