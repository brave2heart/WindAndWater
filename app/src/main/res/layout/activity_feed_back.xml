<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <android.support.v7.widget.CardView
        android:id="@+id/card_feed_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px400dp"
        app:cardCornerRadius="@dimen/px10dp"
        android:elevation="@dimen/px20dp"
        android:layout_marginLeft="@dimen/px40dp"
        android:layout_marginRight="@dimen/px40dp"
        android:layout_marginTop="@dimen/px40dp"
        >
        <EditText
            android:id="@+id/et_feed_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|left"
            android:hint="@string/txt_feed_back"
            android:textSize="@dimen/textSize_m"
            android:paddingLeft="@dimen/px20dp"
            android:paddingRight="@dimen/px20dp"
            android:paddingTop="@dimen/px20dp"
            android:background="@null"
            />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_feed_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:text="@string/txt_submit"
        android:textSize="@dimen/textSize_l"
        android:textColor="@color/white"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="@dimen/px40dp"
        android:layout_marginRight="@dimen/px40dp"
        android:background="@drawable/selector_btn_touch"
        android:layout_below="@+id/card_feed_back"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>