<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_larger"
    android:padding="@dimen/margin_medium"
    android:background="@drawable/shape_tarot_pop_bg">


    <TextView
        android:id="@+id/tv_tarot_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_tarot_intro"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px70dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_below="@id/tv_tarot_intro"
        android:paddingRight="@dimen/margin_large"
        android:paddingLeft="@dimen/margin_large"
        android:background="@drawable/shape_tarot_btn"
        android:foreground="?android:selectableItemBackground"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/brown"/>




</RelativeLayout>