<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardView_radiu"
    app:cardElevation="@dimen/cardView_shadow">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.tongcheng.soothsay.widget.BigRoundImageView
            android:id="@+id/iv_classroom_shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px224dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:imgborderRadius="@dimen/cardView_radiu"
            app:imgtype="round" />

        <TextView
            android:id="@+id/tv_classroom_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px10dp"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:lines="1"
            android:textColor="@color/black_text"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_classroom_shop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:paddingBottom="@dimen/margin_small"
            android:lines="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSize_s" />
    </LinearLayout>

</android.support.v7.widget.CardView>