<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/homeforcunt_constellation_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/homeforcunt_constellation_virgo" />

        <TextView
            android:id="@+id/homeforcunt_constellation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/homeforcunt_constellation_image"
            android:text="处女座"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18" />


        <TextView
            android:id="@+id/homeforcunt_constellation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeforcunt_constellation_name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/homeforcunt_constellation_image"
            android:text="4.20—5.20"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/homeforcunt_constellation_constype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeforcunt_constellation_date"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/homeforcunt_constellation_image"
            android:text="土象星座"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/homeforcunt_this_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_homeforcunt_add_bg"
            android:drawableLeft="@drawable/homeforcunt_qiehuan"
            android:gravity="center"
            android:padding="@dimen/dp_10"

            android:text="切换星座" />
    </RelativeLayout>

</android.support.v7.widget.CardView>