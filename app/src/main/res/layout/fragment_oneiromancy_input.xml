<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:background="@drawable/qqws_zgjm_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/px650dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px60dp"
        android:background="@drawable/qqws_zgjm_search"
        android:orientation="horizontal">

        <EditText
            android:inputType="textPhonetic"
            android:id="@+id/et_input"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:hint="搜索梦到的内容"
            android:textColorHint="#999"
            android:textSize="@dimen/px32sp"
            />

        <TextView
            android:clickable="true"
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:text="解梦"
            android:textSize="@dimen/px34sp"/>
    </RelativeLayout>

    <ListView
        android:divider="@null"
        android:layout_marginTop="@dimen/px24dp"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>